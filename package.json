{
    "name": "root",
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "bump": "ncu -u && npm update && npm install && lerna bootstrap",
        "pack": "npm run bump && git add -A && git commit -am \"packed\" --allow-empty && lerna version patch --yes --force-publish",
        "dev": "lerna run watch --stream --parallel",
        "build": "lerna run build --stream",
        "start": "lerna run start --stream",
        "prepare": "husky install",
        "release:patch": "git add -A && git commit -am \"released\" --allow-empty && lerna version patch --yes --force-publish",
        "test:coverage": "jest --collect-coverage",
        "test": "jest",
        "test:unit": "jest --testPathIgnorePatterns packages/geis-e2e",
        "test:e2e": "jest \"packages/geis-e2e\"",
        "test:browse": "jest \"packages/geis-browse\"",
        "watch": "jest --watch",
        "watch:type": "jest \"packages/geis-type\" --watch",
        "watch:core": "jest \"packages/geis-core\" --watch",
        "watch:cast": "jest \"packages/geis-cast\" --watch",
        "watch:polyfill": "jest \"packages/geis-polyfill\" --watch",
        "watch:apply": "jest \"packages/geis-apply\" --watch"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^19.0.0",
        "@rollup/plugin-node-resolve": "^13.0.0",
        "@rollup/plugin-typescript": "^8.2.1",
        "@types/jest": "^26.0.23",
        "@types/jsonpath": "^0.2.0",
        "@types/rimraf": "^3.0.0",
        "autobind-decorator": "^2.4.0",
        "eslint": "^7.27.0",
        "file-url": "^4.0.0",
        "husky": "^6.0.0",
        "inversify": "^5.1.1",
        "is-generator-function": "^1.0.9",
        "ix": "^4.3.1",
        "jest": "^27.0.1",
        "jsonpath": "^1.1.1",
        "lerna": "^4.0.0",
        "npm-check-updates": "^11.5.13",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rollup": "2.50.1",
        "rollup-plugin-dts": "^3.0.2",
        "supertest": "^6.1.3",
        "ts-jest": "^27.0.1",
        "ts-loader": "^9.2.2",
        "ts-node": "^10.0.0",
        "typescript": "4.2.4",
        "zod": "^3.1.0"
    }
}
